<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title mb-0">@Title</h5>
                @if (!string.IsNullOrWhiteSpace(Subtitle))
                {
                    <div class="text-muted" style="white-space: pre-wrap;">@Subtitle</div>
                }
            </div>
        </div>

        @if (Items is not null && Items.Count > 0)
        {
            <div class="mt-3">
                @foreach (var item in Items)
                {
                    <div class="d-flex justify-content-between border-bottom py-1">
                        <div class="text-muted">@item.Key</div>
                        <div class="fw-semibold">@item.Value</div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public IReadOnlyList<(string Key, string Value)> Items { get; set; } = Array.Empty<(string Key, string Value)>();
}
